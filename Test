local HttpService = game:GetService("HttpService")
local whitelistUrl = "https://raw.githubusercontent.com/EncryptedV2/Nova-Hub-Paid-Version/refs/heads/main/Whitelist"

local function isPlayerWhitelisted(player)
    local success, response = pcall(function()
        return HttpService:GetAsync(whitelistUrl)
    end)

    if success then
        local whitelistScript = response
        local chunk, err = loadstring(whitelistScript)
        
        if chunk then
            local whitelistPlayers = chunk()  -- Execute the Lua code to get the whitelist

            for _, username in ipairs(whitelistPlayers) do
                if username == player.Name then
                    return true
                end
            end
        else
            warn("Error loading whitelist: " .. err)
        end
    else
        warn("Error fetching whitelist: " .. response)
    end

    return false
end

local player = game.Players.LocalPlayer

if isPlayerWhitelisted(player) then
    print("Hello world")
else
    print("You are not whitelisted.")
end
